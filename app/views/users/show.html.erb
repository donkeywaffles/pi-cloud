<h1><%= @user.name %></h1>
<%= image_tag @user.avatar.url(:medium) %>
<h2>Bio</h2>
<p><%= @user.bio %></p>
<% if @playlists.count > 0 %>
  <h2>Playlists</h2>
  <% @playlists.each do |p| %>
    <%= link_to p.name, user_playlist_path(@user, p) %>
  <% end %>
<% end %>
<% if @songs.count > 0 %>
  <h2>Songs</h2>
  <% @songs.each do |s| %>
    <%= link_to s.title, s %>
  <% end %>
<% end %>
<h3>Contact</h3>
<p><%= @user.email %></p>

<!-- this part is just for Logged in user
not for other users viewing the page -->

<h4><%= link_to "Edit Account", edit_user_path(@user) %> | <%= link_to "Add Song", new_user_song_path(:user_id => @user.id)%> | <%= link_to "Add Playlist", new_user_playlist_path(:user_id => @user.id) %></h4>
