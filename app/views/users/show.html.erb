<body id="user-show" class="full-page">
  <div class="translucent center">
    <h1><%= @user.name %></h1>

    <% if @user.avatar.url != "/images/original/missing.png" %>
      <%= image_tag @user.avatar.url(:medium) %>
    <% end %>


    <h3>Bio</h3>

    <p><%= @user.bio %></p>
    <% if @playlists.count > 0 %>
      <h3>Playlists</h3>
      <% @playlists.each do |p| %>
        <%= link_to p.name, user_playlist_path(@user, p) %>
      <% end %>
    <% end %>
    <% if @songs.count > 0 %>
      <h2>Songs</h2>
        <%= render partial: "show_cards" %>
    <% end %>
    <h3>Contact</h3>
    <p><%= @user.email %></p>

    <!-- this part is just for Logged in user
    not for other users viewing the page -->

    <% if logged_in? && @user == current_user %>
      <h4><%= link_to "Edit Account", edit_user_path(@user) %> | <%= link_to "Create Song", new_user_song_path(:user_id => @user.id)%> | <%= link_to "Create Playlist", new_user_playlist_path(:user_id => @user.id) %></h4>
    <% end %>
  </div>
</body>
