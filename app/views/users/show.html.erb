<div id="user-show">
  <div class="col-md-6 translucent center">
    <h1><%= @user.name %></h1>

    <% if @user.avatar.url != "/images/original/missing.png" %>
      <%= image_tag @user.avatar.url(:medium) %>
    <% end %>


    <h3>Bio</h3>

    <p><%= @user.bio %></p>
    <% if @playlists.count > 0 %>
      <h3>Playlists</h3>
      <% @playlists.each do |p| %>
        <%= link_to p.name, user_playlist_path(@user, p) %>
      <% end %>
    <% end %>
    <% if @songs.count > 0 %>
      <h3>Songs</h3>
      <% @songs.each do |s| %>
        <%= link_to s.title, [@user, s] %>
      <% end %>
    <% end %>
    <h3>Contact</h3>
    <p><%= @user.email %></p>

    <!-- this part is just for Logged in user
    not for other users viewing the page -->

    <% if logged_in? %>
      <h5><%= link_to "Edit Account", edit_user_path(@user) %> | <%= link_to "Add Song", new_user_song_path(:user_id => @user.id)%> | <%= link_to "Add Playlist", new_user_playlist_path(:user_id => @user.id) %></h5>
    <% end %>
  </div>
</div>
