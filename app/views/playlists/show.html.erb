<body id="playlist-show" class="full-page">
  <div class="translucent center">
    <h1><%= @user.name %>'s '<%= @playlist.name %>'</h1>
    <%= @playlist.description %>
    <br><br>
    <% if @playlist.songs.empty? %>
      <p>There are currently no songs. </p>
    <% else %>
      <ol>
        <% @playlist.songs.each do |s| %>
            <li><%= link_to s.title, [@user, s] %> [<%= link_to "delete", remove_playlist_song_path(song_id: s), :method => :post %>]</li>
        <% end %>
      </ol>
    <% end %>
    <br>
    <% if logged_in? && @user == current_user %>
    <h4><%= link_to "Edit Playlist", edit_user_playlist_path(@user, @playlist) %></h4>
    <% end %>
  </div>
</body>
